<script>
  // Import marked for markdown rendering from CDN (ESM)
  import { marked } from "https://cdn.jsdelivr.net/npm/marked/lib/marked.esm.js";

  const messagesArea = document.getElementById("messages-area");
  const chatForm = document.getElementById("chat-form") as HTMLFormElement;
  const userInput = document.getElementById("user-input") as HTMLInputElement;
  const sendBtn = document.getElementById("send-btn") as HTMLButtonElement;

  let isLoading = false;
  let rateLimits = { per_minute: 10, per_hour: 30, per_day: 100 }; // Default values

  // Get backend URL from environment variable
  const BACKEND_URL = import.meta.env.PUBLIC_BACKEND_URL || "http://localhost:8000";

  // Conversation history for context-aware responses
  let conversationHistory: Array<{ role: "user" | "assistant"; content: string }> = [];

  // Fetch rate limit configuration on load
  async function loadRateLimits() {
    try {
      const response = await fetch(`${BACKEND_URL}/api/config`);
      if (response.ok) {
        const config = await response.json();
        rateLimits = config.rate_limits;
      }
    } catch (error) {
      console.warn("Could not load rate limit config, using defaults", error);
    }
  }

  // Load config when page loads
  loadRateLimits();

  // Enable/disable button based on input
  userInput?.addEventListener("input", () => {
    if (sendBtn) {
      sendBtn.disabled = !userInput.value.trim() || isLoading;
    }
  });

  chatForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (!userInput || !userInput.value.trim() || isLoading) return;

    const question = userInput.value.trim();

    // 1. Add User Message
    addMessage(question, "user");
    userInput.value = "";
    if (sendBtn) sendBtn.disabled = true;
    isLoading = true;

    // 2. Add Loading Indicator
    const loadingId = addLoadingIndicator();

    try {
      // 3. Call API with conversation history for context
      const response = await fetch(`${BACKEND_URL}/api/ask`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          question,
          last_messages: conversationHistory.slice(-4), // Send last 4 messages (2 Q&A pairs)
        }),
      });

      // Handle rate limit error (429)
      if (response.status === 429) {
        removeMessage(loadingId);
        const limitMsg = `â±ï¸ **LÃ­mite de peticiones alcanzado**\n\nHas superado el nÃºmero mÃ¡ximo de consultas permitidas. Por favor, espera un momento antes de intentar nuevamente.\n\n_LÃ­mites: ${rateLimits.per_minute} por minuto, ${rateLimits.per_hour} por hora, ${rateLimits.per_day} por dÃ­a._`;
        addMessage(limitMsg, "bot error");
        return;
      }

      if (!response.ok) throw new Error("Error en la conexiÃ³n");

      const data = await response.json();

      // 4. Remove Loading & Add Bot Message
      removeMessage(loadingId);
      addBotMessage(data);

      // 5. Update conversation history for context
      conversationHistory.push({ role: "user", content: question });
      conversationHistory.push({ role: "assistant", content: data.answer });

      // Keep only last 10 messages (5 pairs) to avoid memory issues
      if (conversationHistory.length > 10) {
        conversationHistory = conversationHistory.slice(-10);
      }
    } catch (error) {
      console.error(error);
      removeMessage(loadingId);
      addMessage(
        "Lo siento, hubo un error al procesar tu pregunta. Por favor intenta de nuevo.",
        "bot error"
      );
    } finally {
      isLoading = false;
      if (userInput) userInput.focus();
    }
  });

  function scrollToBottom() {
    if (messagesArea) {
      messagesArea.scrollTop = messagesArea.scrollHeight;
    }
  }

  function addMessage(text: string, type: "user" | "bot" | "bot error") {
    if (!messagesArea) return;

    const msgDiv = document.createElement("div");
    msgDiv.className = `message ${type}`;

    const contentDiv = document.createElement("div");
    contentDiv.className = "message-content";

    if (type === "user") {
      contentDiv.textContent = text;
    } else {
      contentDiv.innerHTML = marked.parse(text) as string;
    }

    msgDiv.appendChild(contentDiv);
    messagesArea.appendChild(msgDiv);
    scrollToBottom();
  }

  function addBotMessage(data: any) {
    if (!messagesArea) return;

    const msgDiv = document.createElement("div");
    msgDiv.className = "message bot";

    // Main Answer
    const contentDiv = document.createElement("div");
    contentDiv.className = "message-content";
    contentDiv.innerHTML = marked.parse(data.answer) as string;
    msgDiv.appendChild(contentDiv);

    // Sources (collapsible)
    if (data.sources && data.sources.length > 0) {
      const sourcesDetails = document.createElement("details");
      sourcesDetails.className = "sources-collapsible";

      const sourcesSummary = document.createElement("summary");
      sourcesSummary.innerHTML = `ðŸ“š Ver fuentes (${data.sources.length})`;
      sourcesDetails.appendChild(sourcesSummary);

      const sourcesContainer = document.createElement("div");
      sourcesContainer.className = "sources-content";

      data.sources.forEach((source: any) => {
        const sourceCard = document.createElement("div");
        sourceCard.className = "source-card-mini";
        sourceCard.innerHTML = `
          <div class="source-header-mini">
            <span class="partido-tag">${source.partido}</span>
            <span class="score-tag">${(source.score * 100).toFixed(0)}%</span>
          </div>
          <div class="source-text-mini">${source.text}</div>
        `;
        sourcesContainer.appendChild(sourceCard);
      });

      sourcesDetails.appendChild(sourcesContainer);
      msgDiv.appendChild(sourcesDetails);
    }

    // Trace (Agent details)
    if (data.agent_trace) {
      const traceDiv = document.createElement("details");
      traceDiv.className = "agent-trace-mini";
      traceDiv.innerHTML = `
            <summary>ðŸ§  Proceso (${data.agent_trace.intent})</summary>
            <div class="trace-details">
                <div><strong>Pasos:</strong></div>
                <ul>${data.agent_trace.steps.map((s: string) => `<li>${s}</li>`).join("")}</ul>
            </div>
        `;
      msgDiv.appendChild(traceDiv);
    }

    messagesArea.appendChild(msgDiv);
    scrollToBottom();
  }

  function addLoadingIndicator() {
    if (!messagesArea) return "";

    const id = "loading-" + Date.now();
    const msgDiv = document.createElement("div");
    msgDiv.className = "message bot loading";
    msgDiv.id = id;
    msgDiv.innerHTML = `
      <div class="typing-indicator">
        <span></span><span></span><span></span>
      </div>
    `;
    messagesArea.appendChild(msgDiv);
    scrollToBottom();
    return id;
  }

  function removeMessage(id: string) {
    const el = document.getElementById(id);
    if (el) el.remove();
  }
</script>

<style is:global>
  .chat-container {
    display: flex;
    flex-direction: column;
    height: 100%;
    max-width: 900px;
    margin: 0 auto;
    background: var(--bg-primary);
    border-left: 1px solid var(--border-color);
    border-right: 1px solid var(--border-color);
    position: relative;
  }

  .messages-area {
    flex: 1;
    overflow-y: auto;
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    scroll-behavior: smooth;
  }

  .message {
    display: flex;
    flex-direction: column;
    max-width: 85%;
    width: fit-content; /* Important for alignment */
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* User Message Styles */
  .message.user {
    align-self: flex-end;
    align-items: flex-end;
  }

  .message.user .message-content {
    background: var(--message-user-bg);
    color: var(--message-user-text);
    border-radius: 18px 18px 4px 18px; /* Bubble shape */
    box-shadow: var(--shadow-sm);
  }

  /* Bot Message Styles */
  .message.bot {
    align-self: flex-start;
    align-items: flex-start;
  }

  .message.bot .message-content {
    background: var(--message-bot-bg);
    color: var(--message-bot-text);
    border-radius: 18px 18px 18px 4px; /* Bubble shape */
    box-shadow: var(--shadow-sm);
  }

  .message.error .message-content {
    background: #fef3c7;
    color: #92400e;
    border: 1px solid #fbbf24;
  }

  .message.error .message-content strong {
    color: #92400e;
  }

  .message-content {
    padding: 12px 16px;
    font-size: 0.95rem;
    line-height: 1.5;
    word-wrap: break-word;
  }

  /* Markdown Styles inside messages */
  .message-content p {
    margin-bottom: 0.5em;
  }
  .message-content p:last-child {
    margin-bottom: 0;
  }
  .message-content ul,
  .message-content ol {
    margin-left: 1.5em;
    margin-bottom: 0.5em;
  }
  .message-content strong {
    font-weight: 600;
  }
  .message-content a {
    color: inherit;
    text-decoration: underline;
  }

  /* Input Area */
  .input-area {
    padding: var(--spacing-md);
    border-top: 1px solid var(--border-color);
    background: var(--bg-primary);
    position: sticky;
    bottom: 0;
  }

  .chat-form {
    display: flex;
    gap: var(--spacing-sm);
    position: relative;
    max-width: 100%;
  }

  input {
    flex: 1;
    padding: 14px 20px;
    border: 1px solid var(--border-color);
    border-radius: 28px;
    background: var(--bg-secondary);
    color: var(--text-primary);
    font-size: 1rem;
    outline: none;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
  }

  input:focus {
    border-color: var(--accent-color);
    box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.1);
  }

  button {
    background: var(--accent-color);
    color: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition:
      transform 0.1s,
      background 0.2s;
    box-shadow: var(--shadow-md);
    flex-shrink: 0;
  }

  button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    background: var(--text-secondary);
  }

  button:not(:disabled):hover {
    background: var(--accent-hover);
    transform: scale(1.05);
  }

  button:not(:disabled):active {
    transform: scale(0.95);
  }

  .disclaimer {
    text-align: center;
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 12px;
    opacity: 0.8;
  }

  /* Sources Collapsible Styles */
  .sources-collapsible {
    margin-top: 8px;
    font-size: 0.75rem;
    color: var(--text-secondary);
    width: 100%;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
  }

  .sources-collapsible summary {
    cursor: pointer;
    user-select: none;
    padding: 8px 12px;
    background: var(--bg-secondary);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .sources-collapsible summary:hover {
    background: var(--border-color);
  }

  .sources-content {
    padding: 12px;
    background: var(--bg-primary);
    border-top: 1px solid var(--border-color);
  }

  .source-card-mini {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 10px;
    margin-bottom: 8px;
    font-size: 0.85rem;
    transition: background 0.2s;
  }

  .source-card-mini:last-child {
    margin-bottom: 0;
  }

  .source-card-mini:hover {
    background: var(--bg-primary);
    border-color: var(--accent-color);
  }

  .source-header-mini {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
  }

  .partido-tag {
    font-weight: 700;
    font-size: 0.7rem;
    color: white;
    background-color: var(--accent-color);
    padding: 2px 6px;
    border-radius: 4px;
  }

  .score-tag {
    font-size: 0.7rem;
    color: var(--text-secondary);
    background: var(--border-color);
    padding: 2px 6px;
    border-radius: 4px;
  }

  .source-text-mini {
    color: var(--text-primary);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }

  /* Agent Trace Styles */
  .agent-trace-mini {
    margin-top: 8px;
    font-size: 0.75rem;
    color: var(--text-secondary);
    width: 100%;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
  }

  .agent-trace-mini summary {
    cursor: pointer;
    user-select: none;
    padding: 8px 12px;
    background: var(--bg-secondary);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .agent-trace-mini summary:hover {
    background: var(--border-color);
  }

  .trace-details {
    padding: 12px;
    background: var(--bg-primary);
    border-top: 1px solid var(--border-color);
  }

  .trace-details ul {
    padding-left: 20px;
    margin: 4px 0 0 0;
  }

  .trace-details li {
    margin-bottom: 4px;
  }

  /* Typing Indicator */
  .typing-indicator {
    display: flex;
    gap: 4px;
    padding: 16px 20px;
    background: var(--message-bot-bg);
    border-radius: 18px 18px 18px 4px;
    width: fit-content;
  }

  .typing-indicator span {
    width: 8px;
    height: 8px;
    background: #9ca3af;
    border-radius: 50%;
    animation: bounce 1.4s infinite ease-in-out both;
  }

  .typing-indicator span:nth-child(1) {
    animation-delay: -0.32s;
  }
  .typing-indicator span:nth-child(2) {
    animation-delay: -0.16s;
  }

  @keyframes bounce {
    0%,
    80%,
    100% {
      transform: scale(0);
    }
    40% {
      transform: scale(1);
    }
  }
</style>
